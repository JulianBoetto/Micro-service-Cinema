<%- include("top.ejs") %>

<div class="col-sm-6">
  <form action="/login" method="POST">
    <div class="form-group">
      <label for="email">E-mail:</label>
      <input id="email" name="email" type="text" class="form-control" placeholder="Enter the e-mail" /><br />
    </div>
    <div class="form-group">
      <label for="password">Password:</label>
      <input id="password" name="password" type="password" class="form-control" placeholder="Enter the password" /><br />
    </div>
    <input type="submit" value="Login" class="btn btn-primary" />
  </form>
  <hr />
  <% if(message) { %>
    <p>
        <% if(error) { %>
          <div class="alert alert-danger">
        <%} else {%>
          <div class="alert alert-success">
        <%}%>
          <%= message %>
        </div>
    </p>
  <%}%>
  <p>
    <a href="/users/forgot">Forgot the password?</a> | <a href="/users/signup">Don't have an account?</a>
  </p>
</div>

<%- include("bottom.ejs") %>